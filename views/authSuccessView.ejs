<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #1B1B1D;
        }

        .mainDiv {
            display: grid;
            justify-content: center;
            align-content: center;
            text-align: center;
            height: 100vh;
        }

        p#userTokens {
            color: #1B1B1D;
        }

        #appLogo {
            margin: auto;
            width: 45vw;
            max-width: 160px;
        }

        .confirmText {
            margin-top: 6px;
            display: inline;
            color: #767676;
            font-family: 'Poppins', sans-serif;
            margin-bottom: 28px;
            font-size: 14px;
        }

        #confirmIcon{
            margin: auto;
            width: 10vw;
            max-width: 32px;
        }
    </style>
</head>

<body>
    <div class="mainDiv">
        <img src="../../appLogo" id="appLogo">
        <% if(userTokens==="ERROR OCCURED"){ %> <p class="confirmText"> Oops!! Something went wrong :( </p> <% } else {%> <p class="confirmText"> Successfully signed in </p> <img src="../../confirmicon" id="confirmIcon"><%}%>
    </div>
    <p id="userTokens"><%= userTokens %></p>

    <script>
        // Wait for 0.5 seconds then redirect
        setTimeout(function() {
            const userTokensElement = document.getElementById('userTokens');
            const userTokens = userTokensElement.textContent.trim();
            
            // Check if tokens are valid (not an error)
            if (userTokens && userTokens !== "ERROR OCCURED") {
                // Tokens are in format "accessToken/refreshToken"
                const tokenParts = userTokens.split('/');
                const accessToken = tokenParts[0] || '';
                const refreshToken = tokenParts[1] || '';
                
                // Create the redirect URL
                const redirectUrl = `onestopiitg://auth?accessToken=${encodeURIComponent(accessToken)}&refresh_token=${encodeURIComponent(refreshToken)}`;
                
                // Redirect
                window.location.href = redirectUrl;
            }
        }, 500); // 0.5 seconds delay
    </script>
</body>

</html>